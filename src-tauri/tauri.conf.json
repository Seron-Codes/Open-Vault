{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "open-vault",
  "version": "0.2.0",
  "identifier": "com.devanshu.open-vault",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Open Vault",
        "minHeight": 600,
        "minWidth": 800,
        "decorations": false,
        "transparent": true
      },
      {
        "label": "settings",
        "url": "/settings",
        "title": "Settings",
        "width": 600,
        "height": 400,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
